<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ptMS"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_above="@+id/divider5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-112dp"
        android:layout_marginStart="20dp"
        android:ems="15"
        android:textStyle="bold"
        android:textColor="#232322"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="MS"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="209dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@color/BlackBackground" />

    <TextView
        android:id="@+id/ptHSD"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ptMS"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:textColor="#232322"
        android:gravity="center"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:text="HSD"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/tvOprd"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptMS"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Opening Reading"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/tvClrd"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptMS"
        android:layout_below="@+id/tvOprd"
        android:ems="10"
        android:hint="Closing Reading"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/tvCost"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptMS"
        android:layout_below="@+id/tvClrd"
        android:ems="10"
        android:hint="Cost of Petrol "
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/tvOprd2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_alignTop="@+id/tvOprd"
        android:ems="10"
        android:hint="Opening Reading"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/tvClrd2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_below="@+id/tvOprd"
        android:ems="10"
        android:hint="Closing Reading"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/tvCost2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_alignTop="@+id/tvCost"
        android:ems="10"
        android:hint="Cost of Diesel"
        android:inputType="numberDecimal" />


    <TextView
        android:id="@+id/ptIntro"
        android:layout_width="361dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptMS"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#232322"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Enter the values for the day "
        android:textSize="21sp"
        android:background="@drawable/border"
        android:textStyle="bold|italic"/>
    />
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewShowSales"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        app:cardBackgroundColor="#f5060a"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/btnTally"
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/divider2"
            android:layout_alignStart="@+id/cardViewShowSales"
            android:background="#00ffffff"
            android:textColor="#FFFDFAFB"
            android:onClick="showSales"
            android:text="SHOW SALES" />
    </android.support.v7.widget.CardView>


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/divider"
        android:background="@color/BlackBackground" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:background="@color/BlackBackground" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@color/BlackBackground" />

    <View
        android:id="@+id/divider7"
        android:layout_width="3dp"
        android:layout_height="209dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@color/BlackBackground" />

    <View
        android:id="@+id/divider9"
        android:layout_width="3dp"
        android:layout_height="209dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@color/BlackBackground" />

</RelativeLayout>