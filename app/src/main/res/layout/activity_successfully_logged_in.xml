<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".SuccessfullyLoggedIn">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimaryDark" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewmap"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#1962af"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:layout_below="@id/toolbar"
            android:layout_alignStart="@id/cardViewmap"
            android:layout_marginTop="110dp"
            android:text="Nearest Petrol Pump"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/toolbar"
            android:layout_alignStart="@+id/cardViewmap"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/map" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPetrolPrice"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        app:cardBackgroundColor="#1962af"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

         <TextView
        android:id="@+id/petrolprice"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_below="@id/toolbar"
        android:layout_alignStart="@id/cardViewPetrolPrice"
        android:layout_marginTop="110dp"
        android:text="Latest Petrol Prices"
        android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnGetLatestPetrolPrice"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/toolbar"
            android:layout_alignStart="@+id/cardViewPetrolPrice"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fuel_price" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCCTV"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/cardViewPetrolPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="55dp"
        app:cardBackgroundColor="#FF1962AF"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@id/cardViewCCTV"
            android:layout_marginTop="115dp"
            android:text="CCTV"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnOpenCctv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/cardViewCCTV"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cctv_logo" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewEntry"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/cardViewmap"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="55dp"
        app:cardBackgroundColor="#FF1962AF"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@id/cardViewEntry"
            android:layout_marginTop="115dp"
            android:text="Data Entry"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnTallyAccount"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/cardViewEntry"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/daat1" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFirebase"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@id/cardViewCCTV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#FF1962AF"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">


        <Button
            android:id="@+id/btnOpenFirebase"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/cardViewCCTV"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/firebase" />
    </android.support.v7.widget.CardView>


</RelativeLayout>