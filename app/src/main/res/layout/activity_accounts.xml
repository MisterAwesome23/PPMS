<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAccounts">

    <EditText
        android:id="@+id/etCash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter amount received in CASH"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etDtCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter amount received in DT Card"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSwipeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter amount received in Swipe Card"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnTallyValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tally Values" />

    <Button
        android:id="@+id/btnAddToRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Add to records" />
</LinearLayout>