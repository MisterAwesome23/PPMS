<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".showSales">

    <TextView
        android:id="@+id/ptMS"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="#232322"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="MS"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="256dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@color/BlackBackground" />

    <TextView
        android:id="@+id/ptHSD"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ptMS"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#232322"
        android:inputType="textPersonName"
        android:text="HSD"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/ptSales"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptMS"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:textColor="#232322"
        android:inputType="textPersonName"
        android:text="Sales :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSales"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptSales"
        android:layout_below="@+id/ptSales"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptEarn"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptMS"
        android:layout_alignTop="@+id/ptEarn2"
        android:ems="10"
        android:textColor="#232322"
        android:inputType="textPersonName"
        android:text="Earned :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvEarn"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_below="@+id/ptEarn"
        android:layout_alignStart="@+id/ptSales"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-1dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptSales2"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_alignTop="@+id/ptSales"
        android:ems="10"
        android:textColor="#232322"
        android:inputType="textPersonName"
        android:text="Sales :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSales2"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptSales2"
        android:layout_below="@+id/ptSales"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptEarn2"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_marginTop="215dp"
        android:ems="10"
        android:textColor="#232322"
        android:inputType="textPersonName"
        android:text="Earned :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvEarn2"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_below="@+id/ptEarn"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptIntro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptMS"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#232322"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Sales For The Day"
        android:background="@drawable/border"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTally"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#f5060a"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

    <Button
        android:id="@+id/btnTallyWithBank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/cardViewTally"
        android:background="#00ffffff"
        android:textColor="#FFFDFAFB"
        android:text="Tally With Bank" />
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="345dp"
        android:background="@color/BlackBackground" />

    <TextView
        android:id="@+id/tvTotalEarned"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:text="Total Earned:"
        android:textColor="#232322"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/etTotalEarned"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/tvTotalEarned"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-198dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:backgroundTint="@color/Tempblack"
        android:background="@drawable/border"
        android:inputType="numberDecimal" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:background="@color/BlackBackground" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:background="@color/BlackBackground" />

</RelativeLayout>