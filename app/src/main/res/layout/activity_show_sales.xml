<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showSales">

    <TextView
        android:id="@+id/ptMS"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="MS"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="265dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/ptHSD"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ptMS"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="HSD"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/ptSales"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptMS"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sales :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tvSales"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptSales"
        android:layout_below="@+id/ptSales"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptEarn"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptMS"
        android:layout_alignTop="@+id/ptEarn2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Earned :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tvEarn"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptSales"
        android:layout_below="@+id/ptEarn"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptSales2"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_alignTop="@+id/ptSales"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sales :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tvSales2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptSales2"
        android:layout_below="@+id/ptSales"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptEarn2"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_marginTop="215dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Earned :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tvEarn2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ptHSD"
        android:layout_below="@+id/ptEarn"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/ptIntro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ptMS"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Sales For The Day"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnTallyWithBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="TallyWithBank" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="251dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>